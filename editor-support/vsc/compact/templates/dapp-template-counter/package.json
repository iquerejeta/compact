{
  "name": "$${dAppName}",
  "description": "$${description}",
  "author": "$${author}",
  "version": "0.0.1",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf -v dist managed coverage reports",
    "build": "tsc --build && copyfiles -aVu 1 ./src/managed/counter/contract/* ./dist/src/ && copyfiles -u 1 src/*.compact dist/src/",
    "compact": "docker run --pull always -v $(pwd):/code ghcr.io/midnight-ntwrk/compactc:latest \"compactc /code/src/counter.compact /code/src/managed/counter\"",
    "compact-bin": "compactc ./src/counter.compact ./src/managed/counter",
    "lint": "eslint ./tests/**/*.ts ./src/**/*.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules --experimental-specifier-resolution=node' jest",
    "all": "yarn clean && yarn compact && yarn build && yarn test"
  },
  "dependencies": {
    "@midnight-ntwrk/midnight-js-network-id": "^2.0.1",
    "@midnight-ntwrk/ledger": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/node": "^22.15.29",
    "@typescript-eslint/parser": "^8.33.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.4",
    "jest-junit": "^16.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslog": "^4.9.2",
    "typescript": "^5.8.3"
  },
  "private": true
}
