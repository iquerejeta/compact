import CompactStandardLibrary;

export ledger c: List<CoinInfo>;

export circuit test(): [] {
  const coin = CoinInfo { pad(32, "nonce"), pad(32, "color"), 1 };
  const coin2 = CoinInfo { pad(32, "nonce"), pad(32, "color"), 2 };

  assert(c.isEmpty() == true, "Structure should be empty");
  assert(c.length() == 0, "Size should be 0");

  c.pushFront(coin);
  assert(c.length() == 1, "Size should be 1");
  assert(c.head().value == coin, "Head should have value 1");

  c.pushFront(coin2);
  assert(c.length() == 2, "Size should be 2");
  assert(c.head().value == coin2, "Head should have value 2");

  c.popFront();
  assert(c.length() == 1, "Size should be 1");
  assert(c.head().value == coin, "Head should have value 0");

  c.resetToDefault();
  assert(c.length() == 0, "Size should be 0");
  assert(c.isEmpty() == true, "Structure should be empty");
}
