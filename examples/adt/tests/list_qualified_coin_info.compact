import CompactStandardLibrary;

export ledger c: List<QualifiedCoinInfo>;

export circuit test(): [] {
  const qcoin = QualifiedCoinInfo { pad(32, "nonce"), pad(32, "color"), 1, 0 };
  const qcoin2 = QualifiedCoinInfo { pad(32, "nonce"), pad(32, "color"), 2, 0 };

  assert(c.isEmpty() == true, "Structure should be empty");
  assert(c.length() == 0, "Size should be 0");

  c.pushFront(qcoin);
  assert(c.length() == 1, "Size should be 1");
  assert(c.head().value == qcoin, "Head should have value 1");

  c.pushFront(qcoin2);
  assert(c.length() == 2, "Size should be 2");
  assert(c.head().value == qcoin2, "Head should have value 2");

  c.popFront();
  assert(c.length() == 1, "Size should be 1");
  assert(c.head().value == qcoin, "Head should have value 0");

  c.resetToDefault();
  assert(c.length() == 0, "Size should be 0");
  assert(c.isEmpty() == true, "Structure should be empty");
}
