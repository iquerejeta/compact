import CompactStandardLibrary;

export ledger c: Counter;

export ledger c2: Counter;

export circuit test_all(): [] {
  assert(c.read() == 0, "Initial value is 0");

  c.resetToDefault();
  assert(c.read() == 0, "Value is 0");

  c.increment(5);
  assert(c.read() == 5, "Value is 5");

  c.decrement(4);
  assert(c.read() == 1, "Value is 1");

  c.resetToDefault();
  assert(c.read() == 0, "Value is 0");
}

export circuit test_big_increment(): [] {
  assert(c2.read() == 0, "Initial value is 0");

  c2.increment(16 * 16 * 16);
  c2.decrement(4);

  assert(c2.read() == 16 * 16 * 16 - 4, "Value is as defined");
}
