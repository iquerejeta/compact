{
    "compilerOptions": {
      "target": "es2020",
      "module": "NodeNext",
      "sourceMap": true,
      "outDir": "dist/",
      "esModuleInterop": true,
      "moduleResolution": "NodeNext",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "rootDir": "./",
      "allowJs": false,
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"],
        "gen/*": ["gen/*"]
      }
    },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
